<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:text="BPM: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heartmonitor"
        android:layout_above="@+id/plot"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <works.com.HeatBeatMonitor.CameraView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:visibility="gone"
        android:id="@+id/HelloOpenCvView"
        opencv:show_fps="true"
        opencv:camera_id="back"
        android:layout_alignParentStart="true"
        android:translationY="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:textColor="#d90f19"
        android:id="@+id/rgbVal"/>

    <com.androidplot.xy.XYPlot
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/plot"
        android:layout_weight="0.46"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Welcome to the Heart Rate Monitor App.  Instructions: \n1) Place your finger on the camera\n2) turn on the flash using the menu tab\n3) hold still"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="10sp" />

</RelativeLayout>
